#!/bin/zsh

# git-push.sh - A script to automate git add, commit, and push with dynamic commit messages
# Usage: ./git-push.sh Your commit message here

# Check if any arguments were provided
if [ $# -eq 0 ]; then
    echo "Error: No commit message provided."
    echo "Usage: ./git-push.sh Your commit message here"
    exit 1
fi

# Construct the commit message from all arguments
commit_message="$*"

# Print operations for visibility
echo "ğŸ” Adding all changes..."
git add .

echo "ğŸ“ Committing with message: \"$commit_message\""
git commit -m "$commit_message"

echo "ğŸš€ Pushing changes to remote repository..."
git push

# Check if the push was successful
if [ $? -eq 0 ]; then
    echo "âœ… Successfully pushed changes!"
else
    echo "âŒ There was an error pushing changes. Please check your network connection or repository status."
    exit 1
fi
